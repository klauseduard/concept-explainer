# Authentication
REQUIRE_AUTH=True
AUTH_USERNAME=manager
AUTH_PASSWORD=secret

# LLM Provider Configuration
LLM_PROVIDER=openai     # Available providers: openai, ollama
OPENAI_API_KEY=sk-???   # Required only when LLM_PROVIDER=openai

# OpenAI Configuration (when using OpenAI provider)
OPENAI_MODEL=gpt-3.5-turbo     # Available models: gpt-3.5-turbo, gpt-3.5-turbo-0125, gpt-4, gpt-4-0125
OPENAI_TEMPERATURE=0.2         # Range: 0.0 to 2.0, lower = more focused, higher = more creative

# Ollama Configuration (when using Ollama provider)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral-small    # Available models depend on your Ollama installation
OLLAMA_TEMPERATURE=0.2       # Range: 0.0 to 2.0
